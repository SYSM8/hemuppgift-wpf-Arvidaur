<Window x:Class="Hemuppgift_WPFtemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="BtnGrid" Content="Grid" FontSize="30" Click="BtnGrid_Click"/>
        <Button x:Name="BtnStackPanel" Content="StackPanel"  FontSize="30" Grid.Column="1" Click="BtnStackPanel_Click"/>
        <Button x:Name="BtnWrapPanel" Content="WrapPanel"  FontSize="30" Grid.Row="1" Click="BtnWrapPanel_Click"/>
        <Button x:Name="BtnDockPanel" Content="DockPanel" FontSize="30" Grid.Column="1" Grid.Row="1" Click="BtnDockPanel_Click"/>
        
    </Grid>
</Window>
